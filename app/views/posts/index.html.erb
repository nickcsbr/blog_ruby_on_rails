<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<div>
  <% if user_signed_in? %>
      <%= link_to 'New Post', new_post_path %>
  <% end %>
</div>

<div>
  <% @posts.each do |post| %>
      <div>
        <h3>
            <%= post.title %>
        </h3>
          <%= post.created_at.localtime.strftime("%d-%m-%Y %H:%M:%S") %> by <%= post.author %> <br>
          <%= post.body %> <br>
          <% if user_signed_in? %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
    </div>
  <% end %>
</div>
<br>